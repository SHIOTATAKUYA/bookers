<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @books.each do |book| %>
    <tr>
    <th><span class="title"><%= book.title %></span></th>
    <th><span class="body"><%= book.body %></span></th>
    <th><%= link_to "Show", book_path(book.id) %></th>
    <th><%= link_to "Edit", edit_book_path(book.id) %></th>
    <th><%= link_to 'Destroy', book_path(book.id), method: :delete %></th>
    </tr>
    <% end %>

</table>


<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
 <% end %>
<% end %>
<%= form_with model: @book, url:'/books', local:true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
  <%= f.text_area :body %>
  </div>

  <div class="actions"><%= f.submit 'Create Books' %></div>

<% end %>




</body>